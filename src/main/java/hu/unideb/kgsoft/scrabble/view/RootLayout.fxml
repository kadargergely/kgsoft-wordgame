<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0"
	minWidth="800.0" prefHeight="600.0" prefWidth="800.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Fájl">
					<items>
						<MenuItem fx:id="newGameMenuItem" mnemonicParsing="false"
							text="Új játék" onAction="#newGameClicked">
							<accelerator>
								<KeyCodeCombination alt="UP" code="N"
									control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem fx:id="loadGameMenuItem" mnemonicParsing="false"
							text="Játék betöltése" onAction="#loadGameClicked">
							<accelerator>
								<KeyCodeCombination alt="UP" code="L"
									control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem fx:id="saveGameMenuItem" mnemonicParsing="false"
							text="Játék mentése" onAction="#saveGameClicked">
							<accelerator>
								<KeyCodeCombination alt="UP" code="S"
									control="DOWN" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
						<MenuItem fx:id="exitMenuItem" mnemonicParsing="false"
							text="Kilépés" onAction="#exitClicked">
							<accelerator>
								<KeyCodeCombination alt="DOWN" code="F4"
									control="UP" meta="UP" shift="UP" shortcut="UP" />
							</accelerator>
						</MenuItem>
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Felhasználó">
					<items>
						<MenuItem fx:id="switchUserMenuItem" mnemonicParsing="false"
							text="Más felhasználó..." onAction="#switchUserClicked" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Segítség">
					<items>
						<MenuItem mnemonicParsing="false" text="A játékról..." />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
